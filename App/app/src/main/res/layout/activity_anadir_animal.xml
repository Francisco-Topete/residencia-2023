<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".activityAnadirAnimal">

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="206dp"
        android:layout_height="214dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/cameraicon" />

    <Spinner
        android:id="@+id/spinnerEspecie"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:backgroundTintMode="multiply"
        android:foregroundTint="#000000"
        android:foregroundTintMode="add"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewPhoto"
        app:layout_constraintVertical_bias="0.037" />

    <Spinner
        android:id="@+id/spinnerRaza"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerEspecie"
        app:layout_constraintVertical_bias="0.02" />

    <Spinner
        android:id="@+id/spinnerSexo"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerRaza"
        app:layout_constraintVertical_bias="0.028" />

    <Spinner
        android:id="@+id/spinnerSituacion"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerSexo"
        app:layout_constraintVertical_bias="0.034" />

    <Spinner
        android:id="@+id/spinnerEdad"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerSituacion"
        app:layout_constraintVertical_bias="0.038" />

    <Spinner
        android:id="@+id/spinnerProblemasSalud"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerEdad"
        app:layout_constraintVertical_bias="0.045" />

    <Spinner
        android:id="@+id/spinnerHeridas"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerProblemasSalud"
        app:layout_constraintVertical_bias="0.05" />

    <Spinner
        android:id="@+id/spinnerComportamiento"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/palleteColor2"
        android:pointerIcon="cell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerHeridas"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/buttonRegistrarAnimal"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="193dp"
        android:layout_height="63dp"
        android:background="@drawable/custombuttonform"
        android:ellipsize="none"
        android:fontFamily="sans-serif-medium"
        android:minHeight="48dip"
        android:text="Registrar"
        android:textAllCaps="false"
        android:textColor="#DFDFDF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <RelativeLayout
        android:id="@+id/loadingPanelHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#668C8C8C"
        android:gravity="center"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="124dp"
            android:layout_height="120dp"
            android:indeterminate="true" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>